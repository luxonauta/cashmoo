{
  "name": "cashmoo",
  "version": "1.0.0",
  "description": "CashMoo personal finance control",
  "author": "CashMoo",
  "license": "MIT",
  "main": "main.js",
  "type": "module",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "electronVersion": "38.2.0",
  "scripts": {
    "start": "node scripts/setup-icons.js && electron .",
    "start:dev": "node scripts/setup-icons.js && electron . --enable-logging --inspect",
    "start:debug": "node scripts/setup-icons.js && electron . --enable-logging --inspect --remote-debugging-port=9222",
    "start:windows": "node scripts/setup-icons.js && set NODE_ENV=production && electron .",
    "lint": "eslint . --fix && prettier . --write",
    "clean": "npx rimraf node_modules package-lock.json",
    "prepare": "node scripts/setup-icons.js",
    "build": "node scripts/setup-icons.js && electron-builder",
    "build:all": "node scripts/setup-icons.js && electron-builder --win --mac --linux",
    "build:win": "node scripts/setup-icons.js && electron-builder --win",
    "build:mac": "node scripts/setup-icons.js && electron-builder --mac",
    "build:linux": "node scripts/setup-icons.js && electron-builder --linux"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.36.0",
    "electron-builder": "^25.0.5",
    "electron": "^38.2.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "prettier-plugin-css-order": "^2.1.2",
    "prettier": "^3.6.2"
  },
  "build": {
    "appId": "com.cashmoo.app",
    "productName": "CashMoo",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "app/**/*",
      "package.json",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      "icon": "assets/icon.png",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "cashmoo-v${version}-setup.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": false,
      "installerIcon": "assets/icon.png",
      "uninstallerIcon": "assets/icon.png"
    },
    "mac": {
      "target": {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      "icon": "assets/icon.png",
      "category": "public.app-category.finance",
      "bundleVersion": "1.0.0",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "artifactName": "cashmoo-v${version}-${arch}.${ext}"
    },
    "dmg": {
      "title": "${productName} v${version}",
      "backgroundColor": "#ffffff",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 140,
          "y": 180
        },
        {
          "x": 400,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "artifactName": "cashmoo-v${version}.${ext}"
    },
    "linux": {
      "target": {
        "target": "AppImage",
        "arch": [
          "x64"
        ]
      },
      "icon": "assets/icon.png",
      "category": "Office",
      "artifactName": "cashmoo-v${version}.${ext}"
    }
  }
}
